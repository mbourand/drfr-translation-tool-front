{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "local": true,
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://translation-tool-back.deltarune-fr.com/*"
        },
        {
          "url": "https://deltarune-fr.com/*"
        },
        {
          "url": "http://localhost:3000"
        },
        {
          "url": "http://localhost:1420"
        }
      ]
    },
    "shell:default",
    "store:default",
    "core:webview:allow-set-webview-zoom",
    "dialog:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    {
      "identifier": "fs:scope",
      "allow": [
        "**"
      ]
    },
    "fs:allow-seek",
    "fs:allow-read",
    "fs:allow-exists",
    "log:default"
  ]
}